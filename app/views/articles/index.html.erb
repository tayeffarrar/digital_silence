  <nav class="sticky clearfix">
    <div id="logo">
      <%= image_tag "logo.png" %>
    </div>
    <ul class="links clearfix">
      <li><a href='/articles/new'>Search</a></li>
      <li class="current"><a href='/articles'>Gallery</a></li>
    </ul>
  </nav>

  <section class="gallery">
    <ul class="grid-list">
      <% @articles.each do |article|  %>
      <li>
        <div class="grid-list-content">
          <%= link_to article do %>
          <%= article.pub_date.to_s(:long) %>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </section>

